<!DOCTYPE html>
<html>

  <head>
    <title></title>
    <%- include("./partials/_head")  %>     
  </head>
  
  <body>

    <!-- Inicio contenedor -->
    <div class="container-fluid">

      <!-- Única fila | Todo el cuerpo -->
      <div class="row">

          <!-- Columna menu izquierda workspace. Ocupa una sección del grid - 1/12 -->
          <div  class="col-sm-2 col-md-2 col-lg-1 sticky-top color-primary">
            <%- include("./partials/navBar")%>
          </div>

          <!-- Columna cuerpo workspace. Ocupa 11 secciones del grid - 11/12 -->
          <div class="col-sm-10 col-md-10 col-lg-11 p-4 min-vh-100">
            <%- include("./components/messages")  %> 

            <!-- Primera fila del cuerpo. Crear primera nota. Centrado -->
              <div class="d-flex flex-row flex-wrap pt-4 gap-3 justify-content-center">
                <p class="text-center h2">TEAM</p>
                <i class="bi bi-award fs-1"></i>
              </div>

              <div class="d-flex flex-row flex-wrap pt-4 gap-3 justify-content-center">
                  <!-- Oscar -->
                  <div class="d-flex flex-column gap-3 col-12 col-sm-8 col-md-6 col-lg-3 col-xl-2">
        
                    <!-- Task -->
                    <div class="d-flex flex-column card _cardMain">
                    
                      <div class="textMenu d-flex flex-row justify-content-between text-break" >
                        <!-- Task title -->
                        <div class="d-flex card-title text-break task--title">
                          <p>Oscar Miras</p>
                        </div>
                        <!-- Delete Action -->
                        <div contenteditable="false">
                            <i class="bi bi-x-square fa-hover-hidden"></i>
                            <i title="No me elimines!" class="bi bi-emoji-laughing fa-hover-show"></i>            
                        </div>
                      </div>
                      
                      <!-- Task text  -->
                      <div class=" d-flex justify-content-center align-items-center gap-3 text-break"> <!-- form-control _card__title -->
            
                        <img src="https://media-exp1.licdn.com/dms/image/C5603AQF5Hg-s2MSfRQ/profile-displayphoto-shrink_800_800/0/1582706545258?e=1632960000&v=beta&t=D0U5C5qubaTakTsWOtc_dEr2M1zBgp5rt42XyoEtq64" width="50" alt="">
                        <a class="icons_team" onclick="location.href='https://github.com/omiras'"><i class="bi bi-github fs-3"></i> GitHub</a>
                        <a class="icons_team" onclick="location.href='https://www.linkedin.com/in/oscar-miras-ortiz-2a65054a/'"><i class="bi bi-linkedin fs-3"></i> Linkedin</a>
  
                      </div>
                      <div class=" d-flex text-center align-items-center gap-4"> <!-- form-control _card__title -->
                        <p class="m-0">Assisting Discovery</p>
                    </div>
                      
                      <!-- Action Icons -->
                      <div>
                        <div class="d-flex">
                            <a onclick="rotate(event)" ><i class="bi bi-arrow-counterclockwise"></i></a>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!-- End Oscar -->
              </div> 

              <div class="py-4 text-center">
                Aparición en orden alfabético. Netmind FOAP promoción 2021.
              </div>
   
              <div class="d-flex flex-row flex-wrap gap-3 justify-content-center ">       

                <% team.forEach( person => { %> 
                  <div class="d-flex flex-column gap-3 col-12 col-sm-8 col-md-6 col-lg-3 col-xl-2">
          
                    <!-- card -->
                    <div class="d-flex flex-column card _cardMain">
                    
                      <div class="textMenu d-flex flex-row justify-content-between text-break" >
                        <!-- person name -->
                        <div class="d-flex card-title text-break task--title">
                          <p><%= person.name %></p>
                        </div>
                        <!-- Delete Action -->
                        <div>
                            <i class="bi bi-x-square fa-hover-hidden"></i>
                            <i title="No me elimines!" class="bi bi-emoji-laughing fa-hover-show"></i>            
                        </div>
                      </div>
                      
                      <!-- person text  -->
                      <div class=" d-flex justify-content-center align-items-center gap-3 text-break"> <!-- form-control _card__title -->
            
                        <img src="<%= person.image %>" width="50" alt="">
                        <a class="icons_team" onclick="location.href='<%= person.GitHub %>'"><i class="bi bi-github fs-3"></i> GitHub</a>
                        <a class="icons_team" onclick="location.href='<%= person.Linkedin %>'"><i class="bi bi-linkedin fs-3"></i> Linkedin</a>

                      </div>
                      <div class=" d-flex text-center align-items-center gap-4"> <!-- form-control _card__title -->
                        <p class="m-0"><%= person.quote %></p>
                    </div>
                      
                      <!-- Action Icons -->
                      <div>
                        <div class="d-flex">
                            <a onclick="rotate(event)" ><i class="bi bi-arrow-counterclockwise"></i></a>
                        </div>
                      </div>
                    </div>

                  </div>
                <% }) %> 

              </div>

          </div>
          
      </div>
      <!-- Fin única fila | Todo el cuerpo -->
    </div>
  <!-- Fin contenedor -->

  <!-- Scripts globales -->   
  <%- include("./partials/_scripts")  %> 
  
  <!-- Scripts específicos -->
  <script>
    function rotate(event){
      event.path[5].style.transition = "1s";
      event.path[5].style.transform = "rotate(360deg)";
      event.bubbles = false
    }
  </script>


  </body>
  
</html>