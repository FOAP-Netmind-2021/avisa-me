<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <%- include("../partials/_head")  %> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
  </head>
  <body>
    <%- include("../components/messages")  %> 
  <div class="cointainer p-5">

    <div class="row">
      <div class="col-md-4 mx-auto">
        <div class="card">
          <div class="card-header">
            <%= title %>   
          </div>
          <div class="card-body">
            <form action="/user/<%= endpoint %>" method="POST">
              <div class="form-group">
                <input type="email" class="form-control" name="email" placeholder="Email" required>
              </div>
              <% if(endpoint !== "recovery") { %> 
                <div class="form-group mt-1">
                  <input type="password" class="form-control" name="password" placeholder="Password" required>
                </div>
              <% } %> 
              <% if(endpoint === "signup") { %> 
                <div class="form-group mt-1">
                  <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" required>
                </div>
              <% } %> 
              <button class="btn btn-primary btn-block my-2">
                <%= title %>  
              </button>
              <% if(endpoint === "login") { %>
                <p class="m-0">Todavía sin cuenta?</p>                
                <p class="m-0"><a href="/user/signup">Créala en 1 minuto!</a></p>               
                <p class="mt-2 mb-0"><a href="/user/recovery">Recuperar contraseña</a></p>
              <% } else if(endpoint === "signup") { %>
                <p class="m-0">Ya tiene cuenta?</p>
                <p class="m-0"><a href="/user/login">Accede desde aquí!</a></p>
              <% } else if(endpoint === "recovery") { %>
                <p class="m-0">Recibirá un correo con la contraseña</p>
                <p class=mt-2 mb-0"><a href="/user/login">Iniciar sesión</a></p>
              <% } %> 
            </form>
          </div>
        </div>
      </div>
    </div>

  </div>





  <%- include("../partials/_scripts")  %> <!-- Scripts globales app -->
  </body>
</html>